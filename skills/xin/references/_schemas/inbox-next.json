{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "xin inbox next",
  "description": "Response schema for xin inbox next command",
  "type": "object",
  "required": ["items", "item", "query"],
  "properties": {
    "items": {
      "type": "array",
      "items": { "$ref": "search-item.json" }
    },
    "item": {
      "description": "Convenience: first item or null",
      "oneOf": [
        { "$ref": "search-item.json" },
        { "type": "null" }
      ]
    },
    "query": {
      "type": "object",
      "properties": {
        "compiled": { "type": "string" },
        "collapseThreads": { "type": "boolean" },
        "oldest": { "type": "boolean" },
        "all": { "type": "boolean" }
      }
    }
  }
}
