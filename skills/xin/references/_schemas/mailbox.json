{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "xin mailbox",
  "description": "Mailbox (label) metadata",
  "type": "object",
  "required": ["id", "name"],
  "properties": {
    "id": { "type": "string" },
    "name": { "type": "string" },
    "role": { "type": ["string", "null"] },
    "parentId": { "type": ["string", "null"] },
    "sortOrder": { "type": ["integer", "null"] },
    "totalEmails": { "type": ["integer", "null"] },
    "unreadEmails": { "type": ["integer", "null"] },
    "totalThreads": { "type": ["integer", "null"] },
    "unreadThreads": { "type": ["integer", "null"] },
    "isSubscribed": { "type": ["boolean", "null"] }
  }
}
