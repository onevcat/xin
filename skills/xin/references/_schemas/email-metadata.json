{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "xin email metadata",
  "description": "Email metadata returned by get --format metadata/full",
  "type": "object",
  "required": ["emailId", "threadId", "receivedAt", "subject", "from", "to", "cc", "bcc", "mailboxIds", "keywords", "hasAttachment", "preview"],
  "properties": {
    "emailId": { "type": "string" },
    "threadId": { "type": "string" },
    "receivedAt": { "type": ["string", "null"] },
    "subject": { "type": ["string", "null"] },
    "from": { "type": "array", "items": { "$ref": "address.json" } },
    "to": { "type": "array", "items": { "$ref": "address.json" } },
    "cc": { "type": "array", "items": { "$ref": "address.json" } },
    "bcc": { "type": "array", "items": { "$ref": "address.json" } },
    "mailboxIds": { "type": "object", "additionalProperties": { "type": "boolean" } },
    "keywords": { "type": "object", "additionalProperties": { "type": "boolean" } },
    "hasAttachment": { "type": "boolean" },
    "preview": { "type": ["string", "null"] },
    "headers": {
      "type": "object",
      "description": "Present only when --headers is specified",
      "additionalProperties": {
        "oneOf": [
          { "type": "string" },
          { "type": "array", "items": { "type": "string" } }
        ]
      }
    }
  }
}
